<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Beer</th>
      <th>Comment</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.beer.name %></td>
        <td><%= post.comment %></td>
        <td><%= post.user.full_name %></td>
        <td class="btn"><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

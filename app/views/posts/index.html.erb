
<h2>All recent posts</h2>

<table class="responsive-table">
  <thead>
    <tr>
      <th>Beer</th>
      <th>Comment</th>
      <th>Rating</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.beer.name %></td>
        <td><%= post.comment %></td>
        <% if current_user %>
          <td><%= rating_for post, 'beer', enable_half: true %></td>
        <% end %>
        <td><%= post.user.full_name %></td>
        <td ><%= link_to 'Show', post, class: "waves-effect waves-light btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posts %>

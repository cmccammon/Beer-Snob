
<div class="row">
  <div class="col s12">
    <h2>Search for breweries</h2>

    <%= form_tag breweries_path, :method => 'get' do %>
  <p class="input-field">
    <%= label_tag 'search breweries' %>
    <%= text_field_tag :search, params[:search] %>
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
    </button>
  </p>
    <% end %>
  </div>
</div>


<div class="divider"></div>
<div class="row">
  <% @breweries.each do |br| %>
  <div class="col s12 m6">
    <div class="card hoverable">
      <div class="card-content">
        <span class="card-title  amber accent-2 black-text"><%= truncate(br.name, length: 28, separator: ' ') %></span>
          <p>
            <%= image_tag(br.images[:medium]) if br.images %><br>
            <%= br.description %>
          </p>
        </div>
      <div class="card-action light-blue lighten-5">
        <%= link_to "List beers", breweries_show_path(id: br.id), class: "light-blue-text"%>
        <% if user_signed_in? %>
        <%= link_to "Brewers Website", br.website, data: { confirm: "You are about to leave this web site, Are you sure?" }, class: "light-blue-text"%>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>

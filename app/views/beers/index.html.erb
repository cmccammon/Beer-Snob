<h1>Listing Beers</h1>

<%= form_tag beers_index_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %><%= submit_tag 'search' %>
  </p>
<% end %>
<table>
  <thead>
    <tr>
      <th>id</th>
      <th>ABV</th>
      <th>Name</th>
      <th>Brewery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= beer.id %></td>
        <td><%= beer.abv %></td>
        <td><%= beer.name %></td>
        <td><%= beer.breweries.inspect %></td>
      </tr>
    <% end %>
  </tbody>
</table>
